div.container
    form.form-horizontal
        h2.login.text-center Please register
        div.form-group
            label.col-sm-2.control-label(for="registerName") Name
            div.col-sm-9
                input#registerName.form-control(type="text", placeholder="Name")

        div.form-group
            label.col-sm-2.control-label(for="registerPassword") Password
            div.col-sm-9
                input#registerPassword.form-control(type="password", placeholder="Password")

        div.form-group
            div.col-sm-offset-2.col-sm-9
                button.btn.btn-default Register
